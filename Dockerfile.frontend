# Dockerfile.frontend
FROM node:20-alpine AS build

WORKDIR /app
COPY cv-ats/package*.json ./
RUN npm install
COPY cv-ats .
RUN npm run build

# Stage 2 â€” Serve via NGINX
FROM nginx:alpine
COPY cv-ats/dist /usr/share/nginx/html
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

